<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="profile">
	<insert id="profileInsert" parameterType="pdto">
		insert into profile values(0
		,#{email1},#{email2},#{user_name},#{password},#{password},#{image},now())
	</insert>
	<select id="profileSelect" parameterType="int" resultType="pdto">
		select * from profile where num=#{num}
	</select>
	<update id="profileUpdate" parameterType="pdto">
		update profile set email1=#{email1},email2=#{email2},user_name=#{user_name}
		,password=#{password},phone=#{phone},image=#{image},gaipday=now() where num=#{num}
	</update>
	<select id="profileImage" parameterType="pdto" resultType="int">
		select image from profile where num=#{num}
	</select>
</mapper>